<!-- Page Navigation -->
<section id="navigation" class="docs-section">
  <h2>ðŸ§­ Page Navigation</h2>
  <p>
    Navigate web pages using familiar vim keybindings for scrolling
    and browser controls.
  </p>

  <h3>Scrolling</h3>
  <div class="keybinding-grid">
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>j</kbd></div>
      <div class="keybinding-desc">
        Scroll down (smooth scrolling)
      </div>
    </div>
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>k</kbd></div>
      <div class="keybinding-desc">
        Scroll up (smooth scrolling)
      </div>
    </div>
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>gg</kbd></div>
      <div class="keybinding-desc">Jump to top of page</div>
    </div>
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>G</kbd></div>
      <div class="keybinding-desc">Jump to bottom of page</div>
    </div>
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>Space</kbd></div>
      <div class="keybinding-desc">Page down (80% of viewport)</div>
    </div>
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>b</kbd></div>
      <div class="keybinding-desc">Page up (80% of viewport)</div>
    </div>
  </div>

  <h3>Browser Controls</h3>
  <div class="keybinding-grid">
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>[</kbd></div>
      <div class="keybinding-desc">
        Browser back (same as back button)
      </div>
    </div>
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>]</kbd></div>
      <div class="keybinding-desc">Browser forward</div>
    </div>
    <div class="keybinding-card">
      <div class="keybinding-keys"><kbd>r</kbd></div>
      <div class="keybinding-desc">Reload current page</div>
    </div>
  </div>
</section>