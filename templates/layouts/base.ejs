<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle || 'VimNav' %></title>
    <meta
      name="description"
      content="<%= pageDescription || 'Professional vim-style browser navigation for Chrome. Navigate websites with keyboard shortcuts, vim commands, and advanced text editing features.' %>"
    />
    <% if (typeof pageKeywords !== 'undefined' && pageKeywords) { %>
    <meta name="keywords" content="<%= pageKeywords %>" />
    <% } %>
    <link rel="stylesheet" href="styles.css" />

    <!-- Canonical URL -->
    <link rel="canonical" href="<%= canonical || 'https://vimnav.dev/' %>" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= canonical || 'https://vimnav.dev/' %>" />
    <meta property="og:title" content="<%= pageTitle || 'VimNav - Vim Style Browser Navigation Chrome Extension' %>" />
    <meta property="og:description" content="<%= pageDescription || 'Professional vim browser extension for Chrome. Keyboard navigation, vim keybindings, tab management, productivity tools for vim and neovim users.' %>" />
    <meta property="og:image" content="https://vimnav.dev/assets/icon.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="<%= canonical || 'https://vimnav.dev/' %>" />
    <meta property="twitter:title" content="<%= pageTitle || 'VimNav - Vim Style Browser Navigation Chrome Extension' %>" />
    <meta property="twitter:description" content="<%= pageDescription || 'Professional vim browser extension for Chrome. Keyboard navigation, vim keybindings, tab management, productivity tools for vim and neovim users.' %>" />
    <meta property="twitter:image" content="https://vimnav.dev/assets/icon.png" />

    <!-- Favicons -->
    <%- include('../components/favicons.ejs') %>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- Page-specific head content -->
    <%- typeof pageHead !== 'undefined' ? pageHead : '' %>

    <!-- Page-specific styles -->
    <%- typeof pageStyles !== 'undefined' ? pageStyles : '' %>
  </head>
  <body>
    <!-- Header -->
    <%- include('../components/header.ejs') %>

    <!-- Main Content -->
    <main>
      <%- content %>
    </main>

    <!-- Footer -->
    <%- include('../components/footer.ejs') %>

    <!-- Page-specific scripts -->
    <%- typeof pageScripts !== 'undefined' ? pageScripts : '' %>
  </body>
</html>